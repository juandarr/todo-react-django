{
	"env": {
		"browser": true,
		"es2021": true
	},
    "settings": {
        "react": {
            "version":"detect"
        }
    },
	"extends": [
		"standard-with-typescript",
		"plugin:react/recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/prop-types": [
			2,
			{ "ignore": ["className","classNames", "align", "sideOffset", "position", "showOutsideDays", "mode"] }
		],
        "no-console": "warn"
	}
}
